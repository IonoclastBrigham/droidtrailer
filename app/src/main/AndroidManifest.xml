<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.alessandromencarini.droidtrailer" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/trailer_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="it.alessandromencarini.droidtrailer.SettingsActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="it.alessandromencarini.droidtrailer.PullRequestListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="it.alessandromencarini.droidtrailer.RepositoryListActivity"
            android:label="@string/title_activity_repository" >
        </activity>
    </application>

</manifest>
