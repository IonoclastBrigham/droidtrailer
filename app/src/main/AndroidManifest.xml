        <activity
            android:name=".PullRequestListActivity"
            android:label="@string/title_activity_pull_request_list" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
